---
import { aliases } from "../data";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Revytter">
  <h1>Revytter</h1>

  <table>
    <thead
      ><tr
        ><th>Navn</th><th>Forfatter</th><th>Roller</th><th>Instrukt√∏r</th>
      </tr>
    </thead>
    <tbody>
      {
        Object.keys(aliases)
          .sort()
          .map((aliasId) => (
            <tr>
              <td>
                <a href={`/personer/${aliasId}`}>{aliasId}</a>
              </td>
              <td>{aliases[aliasId].authored.length}</td>
              <td>{aliases[aliasId].played.length}</td>
              <td>{aliases[aliasId].instructed.length}</td>
            </tr>
          ))
      }
    </tbody>
  </table>

  <style>
    thead {
      position: sticky;
      top: 0;
    }
  </style>
</Layout>
