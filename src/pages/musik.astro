---
import SpotifyLink from "../components/SpotifyLink.astro";
import { materials } from "../data";
import SidebarLayout from "../layouts/Sidebar.astro";

const songs = Object.values(materials).filter((m) => m.type === "song");
---

<SidebarLayout title="Sange">
  <ul>
    {
      songs.map((s) => (
        <li>
          {s.composer && `${s.composer}: `}
          {s.melody} <SpotifyLink material={s} />
        </li>
      ))
    }
  </ul>
</SidebarLayout>

<style>
  li {
    display: flex;
    align-items: center;
    gap: 8px;
  }
</style>
